{
    "compilerOptions": {
      "target": "es2021",
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "rootDir": "./src",
      "baseUrl": "./src",
      "allowJs": true,
      "sourceMap": true,
      "outDir": "build",
      "noEmitOnError": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules",
    ]
}